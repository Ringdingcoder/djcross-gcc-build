#! /bin/bash

set -e

rpmdev-setuptree
cd /bld
curl -O https://stefanr-dump.s3.eu-west-1.amazonaws.com/djcross-gcc-12.2.0-1ap.src.rpm
rpm -i *.src.rpm
cd ~/rpmbuild
diff -u SPECS/*.spec /bld/*.spec || true
sn=$(basename SPECS/*.spec)
rpmbuild -bb --noclean /bld/$sn
mv RPMS/x86_64/*.rpm /bld/bld
mv BUILD/djcross-*/*s.zip /bld/bld || true
